# ClockIt Development Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Data Storage Configuration (Docker container paths)
CLOCKIT_DATA_DIR=/app/data
PYTHONPATH=/app

# Network Configuration (Development)
NETWORK_SUBNET=172.20.0.0/24
NETWORK_GATEWAY=172.20.0.1

# Fixed Container IP Addresses (Development)  
FRONTEND_IP=172.20.0.10
BACKEND_IP=172.20.0.30
DATABASE_IP=172.20.0.20

# Database Configuration - PostgreSQL
DATABASE_TYPE=postgres
POSTGRES_HOST=clockit-db
POSTGRES_PORT=5432
POSTGRES_DB=clockit
POSTGRES_USER=clockit
POSTGRES_PASSWORD=clockit_dev_pass

# Authentication Secrets (Development - not secure)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=15

# CORS Configuration (Development origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Security Settings (Relaxed for development)
ENABLE_DEBUG_ENDPOINTS=true
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Development Settings
BACKUP_ENABLED=false
MONITORING_ENABLED=false