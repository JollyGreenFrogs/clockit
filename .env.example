# ClockIt Environment Configuration
# Copy this file to .env and modify the values as needed
# 
# PRODUCTION DEPLOYMENT CHECKLIST:
# 1. Set ENVIRONMENT=production
# 2. Generate secure SECRET_KEY (min 32 chars): python -c 'import secrets; print(secrets.token_urlsafe(32))'
# 3. Configure PostgreSQL database settings
# 4. Update CORS_ORIGINS to your domain(s)
# 5. Set LOG_FORMAT=json for production logging
# 6. Disable debug endpoints: ENABLE_DEBUG_ENDPOINTS=false

# Application Environment
# Use 'test' for running tests, 'development' for local dev, 'production' for deployment
ENVIRONMENT=test
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Data Storage Configuration
CLOCKIT_DATA_DIR=./clockit_data

# Docker Configuration (for deployment)
# CLOCKIT_DATA_DIR=/app/data  # Use this path for Docker deployment
# CLOCKIT_DEV_MODE=false      # Set to false for production Docker deployment
# PYTHONPATH=/app             # Set for Docker container

# Database Configuration
# For local testing/development with SQLite (recommended - no PostgreSQL needed):
DEV_MODE=sqlite
DATABASE_TYPE=file

# For PostgreSQL (production or advanced testing):
# DATABASE_TYPE=postgres
# POSTGRES_HOST=clockit-db  # Use 'clockit-db' for Docker, 'localhost' for local PostgreSQL
# POSTGRES_PORT=5432
# POSTGRES_DB=clockit
# POSTGRES_USER=clockit
# POSTGRES_PASSWORD=your_secure_password_here_minimum_16_chars
# DATABASE_URL=postgresql://clockit:password@clockit-db:5432/clockit

# Authentication (REQUIRED for production, recommended for development)
# Generate a secure secret key using:
# python -c 'import secrets; print(secrets.token_urlsafe(64))'
SECRET_KEY=test-secret-key-for-development-only
# For production, generate a strong secret:
# SECRET_KEY=your-generated-secret-key-here-must-be-at-least-32-chars
# JWT_SECRET_KEY=your-generated-jwt-secret-key-here-must-be-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# For production, specify allowed origins (JSON array format):
# CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
# For development (default):
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_HEADERS=["*"]

# Security Headers (Recommended for production)
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_TYPE_OPTIONS=nosniff
FRAME_OPTIONS=DENY
XSS_PROTECTION="1; mode=block"

# Password Security (Production recommended settings)
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGITS=true
REQUIRE_SPECIAL_CHARS=true
PASSWORD_HISTORY_COUNT=5
PASSWORD_EXPIRY_DAYS=90

# Session Security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Rate Limiting (Production security)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Microsoft Planner Integration (Optional)
# MS_TENANT_ID=your-tenant-id
# MS_CLIENT_ID=your-client-id
# MS_CLIENT_SECRET=your-client-secret

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FORMAT=json  # Use 'json' for production, 'text' for development
LOG_FORMAT=text

# Cloud Provider Settings (Optional)
# CLOUD_PROVIDER=aws  # or 'gcp', 'azure'
# REDIS_URL=redis://localhost:6379  # For session storage/caching

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=false
ENABLE_EMAIL_VERIFICATION=false

# Development Features (Disable in production)
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_TEST_ENDPOINTS=false

# Email Configuration (for contact form notifications)
# These are optional - if not set, contact forms will be logged but not emailed

# SMTP Server settings for Office365
SMTP_SERVER=smtp.office365.com
SMTP_PORT=587

# Your Office365 credentials
SMTP_USERNAME=systembugs@jgfgroup.co.uk
SMTP_PASSWORD=your-office365-password

# Email addresses (both set to systembugs for JGF)
FROM_EMAIL=systembugs@jgfgroup.co.uk
SUPPORT_EMAIL=systembugs@jgfgroup.co.uk

# Example for other email providers:
# For Gmail:
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587

# For Yahoo:
# SMTP_SERVER=smtp.mail.yahoo.com
# SMTP_PORT=587